require 'oneroi'

mailer = Oneroi.new('pop3.yourdomain.ext', 'username', 'password')
if mailer.is_empty?
	puts '0 mails.'
else
	puts "Server: #{mailer.count_remote}."
	puts "Local: #{mailer.count_local}."
	mailer.fetch
	puts 'Mails fetched.'
end
puts "Local: #{mailer.count_local}."
